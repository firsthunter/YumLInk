<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.yumlink.GUI.NewPostController">
      <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="50.0">

          <TextField fx:id="title_id" promptText="Title" />
          <TextField fx:id="img_id" promptText="Image URL" />
      <TextArea fx:id="description_id" prefHeight="200.0" prefWidth="200.0" promptText="Description" />
      <VBox fx:id="tagContainer" />
      <VBox fx:id="suggestionContainer" />
      <HBox alignment="BASELINE_RIGHT">
         <children>
            <Button mnemonicParsing="false" text="Cancel">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
      
                <Button fx:id="create_post_btn" text="Create Post">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      </VBox>
</AnchorPane>
