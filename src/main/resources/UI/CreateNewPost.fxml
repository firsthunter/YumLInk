<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.yumlink.GUI.NewPostController">
    <HBox alignment="CENTER" prefHeight="600.0" prefWidth="1200.0">
        <children>
            <VBox alignment="CENTER" spacing="10">

                <TextField fx:id="title_id" promptText="Title"/>
                <TextField fx:id="img_id" promptText="Image URL"/>
                <TextField fx:id="description_id" promptText="Description"/>

                <Button fx:id="create_post_btn" text="Create Post"/>
            </VBox>
        </children>
    </HBox>
</AnchorPane>
