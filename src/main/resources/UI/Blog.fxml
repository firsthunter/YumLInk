<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.yumlink.GUI.BlogController">
    <HBox prefHeight="600.0" prefWidth="1200.0">
      <children>
         <VBox prefHeight="600.0" prefWidth="1000.0">
            <children>
                <GridPane fx:id="post_grid">
                    <columnConstraints>
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
               <Pagination fx:id="pagination" prefHeight="600.0" prefWidth="1000.0" />
            </children>
         </VBox>
         <VBox alignment="BOTTOM_CENTER" prefHeight="600.0" prefWidth="200.0">
            <children>
                <VBox fx:id="update_form" alignment="CENTER" spacing="10">

                    <TextField fx:id="title_id_update" promptText="Title"/>
                    <TextField fx:id="img_id_update" promptText="Image URL"/>
                    <TextField fx:id="description_id_update" promptText="Description"/>
                    <Button fx:id="update_post_btn" text="Update Post"/>
                </VBox>
               <Button fx:id="add_post_btn" mnemonicParsing="false" onAction="#setAdd_post_btn" text="Add New Post">
                  <VBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </VBox.margin>
               </Button>
            </children>
         </VBox>
      </children>
   </HBox>
</AnchorPane>
