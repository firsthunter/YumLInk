<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="175.0" prefWidth="300.0" style="-fx-background-color: D4ECE2; -fx-background-radius: 20;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.yumlink.GUI.PostComponentController">
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="NEVER">
        <Label fx:id="post_title" alignment="CENTER"
               style="-fx-font-family: Montserrat; -fx-text-fill: #4D846B; -fx-font-style: italic;" text="Titre article"
               textFill="WHITE" textOverrun="WORD_ELLIPSIS">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Button fx:id="modifier_btn" layoutX="957.0" layoutY="22.0" mnemonicParsing="false" onAction="#HandleUpdate"
                styleClass="button-nav-bar" stylesheets="@../stylesheet/navbar.css">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0">
                    <Image url="@../icons/edit_btn.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="supprimer_btn" layoutX="957.0" layoutY="22.0" mnemonicParsing="false" onAction="#handleDelete"
                styleClass="button-nav-bar" stylesheets="@../stylesheet/navbar.css">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0">
                    <Image url="@../icons/delete.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
    <HBox alignment="CENTER" maxHeight="80.0" maxWidth="300.0" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="80.0" prefWidth="100.0" VBox.vgrow="NEVER">
        <Label fx:id="post_description" alignment="TOP_LEFT" opacity="0.6"
               style="-fx-font-family: montserrat; -fx-background-color: #4D846B; -fx-background-radius: 5; -fx-label-padding: 4;"
               text="Label" textFill="WHITE" textOverrun="WORD_ELLIPSIS" wrapText="true">
            <HBox.margin>
                <Insets left="5.0" top="5.0"/>
            </HBox.margin>
        </Label>
        <ImageView fx:id="post_image" fitHeight="75.0" fitWidth="90.0" nodeOrientation="INHERIT" pickOnBounds="true"
                   preserveRatio="true" HBox.hgrow="NEVER"/>
    </HBox>
    <HBox alignment="CENTER" prefHeight="45.0" prefWidth="200.0">
        <VBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="130.0">
            <Label fx:id="author_id" alignment="CENTER" style="-fx-font-family: montserrat;" text="Publie Par"
                   textFill="#476146">
                <font>
                    <Font name="System Bold" size="11.0"/>
                </font>
            </Label>
            <Label fx:id="date_published_text" alignment="CENTER" style="-fx-font-family: montserrat;"
                   text="Publie le 17 Oct 2023" textFill="#476146">
                <font>
                    <Font name="System Bold" size="11.0"/>
                </font>
            </Label>
            <Label fx:id="time_published_text" alignment="CENTER" style="-fx-font-family: montserrat;" text="Time"
                   textFill="#476146">
                <font>
                    <Font name="System Bold" size="11.0"/>
                </font>
            </Label>
        </VBox>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleViewMore"
                style="-fx-background-color: transparent; -fx-border-color: #476146; -fx-border-radius: 30; -fx-text-fill: #476146; -fx-font-family: montserrat;"
                text="More details">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </Button>
        <ImageView fx:id="heart_button" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="2.0" top="10.0"/>
            </HBox.margin>
            <Image url="@../icons/heart.png"/>
        </ImageView>
        <Label fx:id="nb_likes" style="-fx-font-family: montserrat;" text="10" textFill="#476146"/>
    </HBox>
</VBox>
